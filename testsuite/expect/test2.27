source ./globals

set test_id          "2.27"
set exit_code        0
set job_id           0
set node_cnt         1
set user             [get_my_user_name]

set cwd "[$bin_pwd]"

print_header $test_id

if {[test_front_end]} {
	log_warn "This test is incompatible with front-end systems"
	exit $exit_code
}

set available [available_nodes $partition ""]
if {$available < $node_cnt} {
	log_warn "not enough nodes currently available ($available avail, $node_cnt needed)"
	exit $exit_code
}

proc end_it { exit_code } {
	global test_id job_id config_path cwd bin_cp
	cancel_job $job_id

	log_info "Changing slurm.conf back"
	exec $bin_cp -v $cwd/slurm.conf.orig $config_path/slurm.conf
	reconfigure

	if {$exit_code == 0} {
		print_success $test_id
	}
	exit $exit_code
}

proc submit { args regex match_cnt } {
	global sbatch scontrol number
	set matches 0
	set jobid 0

	spawn $sbatch --wrap=hostname {*}$args
	expect {
		-re "Submitted batch job ($number)" {
			set jobid $expect_out(1,string)
			exp_continue
		}
		timeout {
			log_error "sbatch not responding"
			end_it 1
		}
		eof {
			wait
		}
	}

	if {$jobid == 0} {
		log_error "did not get sbatch jobid"
		end_it 1
	}

	spawn $scontrol show job $jobid
	expect {
		-re $regex {
			incr matches
			exp_continue
		}
		timeout {
			log_error "sbatch not responding"
			end_it 1
		}
		eof {
			wait
		}
	}

	if {$matches != $match_cnt} {
		log_error "scontrol show job $jobid failed to match '$regex' $match_cnt times; matched $matches times"
		end_it 1
	}

	cancel_job $jobid
}

proc update { job_id args regex match_cnt } {
	global scontrol
	set matches 0

	spawn $scontrol update job $job_id {*}$args
	expect {
		timeout {
			log_error "scontrol not responding"
			end_it 1
		}
		eof {
			wait
		}
	}

	spawn $scontrol show job $job_id
	expect {
		-re $regex {
			incr matches
			exp_continue
		}
		timeout {
			log_error "scontrol not responding"
			end_it 1
		}
		eof {
			wait
		}
	}

	if {$matches != $match_cnt} {
		log_error "scontrol update job $args failed to match '$regex' $match_cnt times; matched $matches times"
		end_it 1
	}
}

set config_path [get_conf_path]
if { $exit_code != 0 } {
	exit $exit_code
}

copy_conf $config_path $cwd
if { $exit_code != 0 } {
	exit $exit_code
}
exec $bin_sed -i "s/^\\(MailDomain.*\\)/#\\1/Ig" $config_path/slurm.conf
reconfigure

submit "-H" "MailUser=\\(null\\) MailType=NONE" 1
submit "-H --mail-type=begin,end" "MailUser=$user MailType=BEGIN,END" 1
submit "-H --mail-user=blah" "MailUser=\\(null\\) MailType=NONE" 1

spawn $sbatch -J "test$test_id" --wrap=hostname -H
expect {
	-re "Submitted batch job ($number)" {
		set job_id $expect_out(1,string)
		exp_continue
	}
	timeout {
		log_error "sbatch not responding"
		end_it 1
	}
	eof {
		wait
	}
}

update $job_id "mailuser=blah mailtype=begin" "MailUser=blah MailType=BEGIN" 1
update $job_id "mailuser= mailtype=begin,end" "MailUser=$user MailType=BEGIN,END" 1
update $job_id "mailtype=begin" "MailUser=$user MailType=BEGIN" 1
update $job_id "mailuser=blah mailtype=begin" "MailUser=blah MailType=BEGIN" 1

cancel_job $job_id

set domain "blah.com"
set mail_conf "
MailDomain = $domain
"
exec $bin_echo $mail_conf >> $config_path/slurm.conf
reconfigure

spawn $sbatch -J "test$test_id" --wrap=hostname -H
expect {
	-re "Submitted batch job ($number)" {
		set job_id $expect_out(1,string)
		exp_continue
	}
	timeout {
		log_error "sbatch not responding"
		end_it 1
	}
	eof {
		wait
	}
}

submit "-H" "MailUser=\\(null\\) MailType=NONE" 1
submit "-H --mail-type=begin,end" "MailUser=$user@$domain MailType=BEGIN,END" 1
submit "-H --mail-user=blah" "MailUser=\\(null\\) MailType=NONE" 1

update $job_id "mailuser=blah mailtype=begin" "MailUser=blah MailType=BEGIN" 1
update $job_id "mailuser= mailtype=begin,end" "MailUser=$user@$domain MailType=BEGIN,END" 1
update $job_id "mailtype=begin" "MailUser=$user@$domain MailType=BEGIN" 1
update $job_id "mailuser=blah mailtype=begin" "MailUser=blah MailType=BEGIN" 1

end_it 0

